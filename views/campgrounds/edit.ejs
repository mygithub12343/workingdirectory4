<%- include ("../partials/header") %> 


    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %> </h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT " method="post">
                <div class="form-group">
                    <input type="text" placeholder="name" name="campground[name]" class="form-control" value="<%= campground.name %> ">
                </div>
                
                <div class="form-group">
                    <input type="number" value="<%= campground.price %> " name="campground[price]" min="0.01" step="0.01" class="form-control">
                </div>

                <div class="form-group">
                    <input type="text" placeholder="image url" name="campground[image]" class="form-control" value="<%= campground.image %> ">
                </div>

                <div class="form-group">
                    <input type="text" placeholder="description" name="campground[description]" class="form-control" value="<%= campground.description %> ">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>        
    </div>    


<%- include ("../partials/footer") %> 